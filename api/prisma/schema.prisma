generator photon {
  provider = "photonjs"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

model User {
  id    String  @default(cuid()) @id
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id         String     @default(cuid()) @id
  published  Boolean    @default(true)
  title      String
  content    String?
  author     User?
  categories Category[]
}

model Category {
  id    String @id @default(cuid())
  name  String
  posts Post[]
}